<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutAppActivity">

    <android.support.v7.widget.CardView
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

            <LinearLayout
                    android:id="@+id/aaa_ll_sandec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Halo! Saya dari "
                          android:textSize="@dimen/dimen_headline6"/>

                <ImageView android:layout_width="80dp"
                           android:layout_height="wrap_content"
                           android:id="@+id/aaa_iv_sandec"/>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/aaa_civ_photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/photo_ku"
                    android:layout_below="@id/aaa_ll_sandec"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>

            <TextView
                    android:id="@+id/aaa_tv_my_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hanif Abdullah"
                    android:gravity="center"
                    android:textSize="@dimen/dimen_headline6"
                    android:layout_below="@id/aaa_civ_photo"
                    android:layout_marginTop="10dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/aaa_tv_my_name"
                    android:layout_margin="5dp">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="10dp">
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/dimen_subtitle"
                              android:text="Email"
                              android:layout_weight="3"/>
                    <TextView
                            android:id="@+id/aaa_tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="hanifabdullah7@gmail.com"
                            android:textSize="@dimen/dimen_subtitle"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="10dp">
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/dimen_subtitle"
                              android:text="Github"
                              android:layout_weight="3"/>
                    <TextView
                            android:id="@+id/aaa_tv_github"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="https://github.com/hanifabdullah21"
                            android:textSize="@dimen/dimen_subtitle"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="10dp">
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/dimen_subtitle"
                              android:text="Medium"
                              android:layout_weight="3"/>
                    <TextView
                            android:id="@+id/aaa_tv_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="https://medium.com/@hanifabdullah7"
                            android:textSize="@dimen/dimen_subtitle"
                            android:layout_weight="1"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>